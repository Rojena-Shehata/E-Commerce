@model PermissionFormViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<form asp-action="UpdatePermissions" method="post">
    <div class="card mt-4">
        <div class="card-header  d-flex justify-content-between mt-2 mb-4 align-items-center p-3 rounded-3 shadow-sm bg-light border-start border-4 border-primary">
            <div>
            <h2 class="text-primary fw-bold mb-1">
                <i class="bi bi-journal-bookmark-fill me-2"></i>
                @Model.RoleName Role
            </h2>
            <p class="mb-0 mdi-format-color-text">
            
               Manage Permisions
            </p>
            </div>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="RoleId" />
            <div class="table-responsive mx-auto" style="max-width: 1000px;">
            <table  class="table table-sm  table-hover mt-5 text-center align-items-center">
                <thead class="table-dark h4 ">
                    <tr>
                        <th></th>
                        <th>Module</th>
                        <th>Permission</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.RoleClaims.Count; i++)
                    {
                        if ( i % 4 == 0)
                        {
                                <tr>
                                    <td colspan="3" class="py-2"></td>
                                </tr>
                                <tr class="table-active ">
                                <td colspan="3" class="fw-bold text-center h5 ">
                                    @Model.RoleClaims[i].DisplayName.Split(".")[1]
                                </td>
                            </tr>
                   

                        }
                        <tr>
                                <td >
                                    <div class="form-check  d-flex justify-content-center align-items-center" >
                            <input type="hidden" asp-for="@Model.RoleClaims[i].DisplayName" />
                            <input asp-for="@Model.RoleClaims[i].IsSelected" class="form-check-input " />
                            
                        </div>
                            </td>
                            <td>
                                @Model.RoleClaims[i].DisplayName.Split(".")[1]
                            </td>
                            <td>
                                @Model.RoleClaims[i].DisplayName.Split(".")[2]

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

        <div class="card-footer d-flex flex-column flex-md-row gap-3 mt-4 pt-3 border-top ">
            <button type="submit" class="btn btn-primary flex-fill gap-2 order-1 order-md-2 h6">
                Save
            </button>
            <a asp-action="Index" class="btn btn-light flex-fill gap-2 order-2 order-md-1 h6">
                Cancel
            </a>

           
        </div>
            
    </div>
</form>
