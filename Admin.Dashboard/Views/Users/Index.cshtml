@model IEnumerable<UserViewModel>
@inject IAuthorizationService authorizationService

@{
    ViewData["Title"] = "Users";
    var HasAccessToEditUser = (await authorizationService.AuthorizeAsync(User, Permission.Users.Edit)).Succeeded;
    var HasAccessToDeleteUser = (await authorizationService.AuthorizeAsync(User, Permission.Users.Delete)).Succeeded;
}

@if (TempData["SuccessMessage"] is not null)
{

    <div id="Alert" class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] is not null)
{

    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<div class="main-panel">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <header class="d-flex justify-content-between mt-2 mb-4 align-items-center p-3 rounded-3 shadow-sm bg-light border-start border-4 border-primary">
                        <div>
                            <h2 class="text-primary fw-bold mb-1">
                                <i class="bi bi-journal-bookmark-fill me-2"></i>
                                Users
                            </h2>
                            <p class="mb-0 mdi-format-color-text">
                                All registered users and their roles
                            </p>
                        </div>


                    </header>

                    @*Partial Form*@
                    @* @if (authorizationService.AuthorizeAsync(User, Permission.Roles.Create).Result.Succeeded)
                    {
                        <partial name="_RoleForm" model="new RoleFormViewModel()" />
                    } *@

                    @if (Model is not null && Model.Any())
                    {
                        <div class="p-3 border rounded shadow-sm bg-white">
                            <div class="table-responsive mt-4">
                            <table class="table table-hover table-striped text-center align-items-center align-middle">
                                    <thead class="border-dark-subtle border-bottom-0">
                                        <tr >
                                        <th><h5> Id</h5> </th>
                                        <th><h5>Display Name</h5> </th>
                                        <th><h5> Email</h5> </th>
                                        <th><h5> Username</h5> </th>
                                        <th><h5> Roles</h5> </th>
                                        <th class="text-center"> <h5>Actions </h5></th>

                                    </tr>
                                </thead>
                                <tbody >

                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.DisplayName</td>
                                            <td>@user.Email</td>
                                            <td>@user.UserName</td>
                                            <td>@(user.Roles is not null && user.Roles.Count() > 0 ? string.Join(", ", user.Roles) : "No roles assigned")</td>
                                            <td>
                                                    <div class="d-flex flex-column justify-content-center align-items-center gap-2 text-center">
                                                    
                                                    @if (HasAccessToEditUser)
                                                    {
                                                            <a class="btn btn-outline-warning w-100" asp-action="Edit" asp-route-userId="@user.Id">Edit</a>
                                                    }
                                                    @if (HasAccessToDeleteUser)
                                                    {
                                                        <form method="post" asp-action="Delete" asp-controller="Roles" asp-route-roleId="@user.Id">
                                                                <button type="submit" class="btn btn-outline-danger w-100"
                                                                    onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                                                Delete

                                                            </button>
                                                        </form>
                                                    }
                                                </div>

                                            </td>
                                        </tr>


                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">There are currently no roles defined.</h4>
                            <p class="text-muted">You can add new roles to manage user permissions effectively.</p>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>

